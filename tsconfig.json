{
  "extends": "./.quasar/tsconfig.json",
  "overrides": [
    {
      "files": ["*.{ts,tsx}"],
      "rules": {
        "@typescript-eslint/switch-exhaustiveness-check": "error",
        "@typescript-eslint/no-explicit-any": "warning"
      }
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@composables/*": ["src/composables/*"],
      "@utils/*": ["src/utils/*"],
      "@css/*": ["src/css/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
